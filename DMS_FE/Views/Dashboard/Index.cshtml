@model DMS_FE.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Manager Dashboard</h2>
                <div>
                    <span class="text-muted">Xin chào, @ViewBag.UserName</span>
                    <form method="post" action="/Account/Logout" style="display: inline;">
                        <button type="submit" class="btn btn-outline-danger btn-sm ms-2">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                                            <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Tổng số phòng</h5>
                                <h3 class="mb-0">@Model.TotalRooms</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-house-door fs-1"></i>
                            </div>
                        </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                                            <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Sinh viên</h5>
                                <h3 class="mb-0">@Model.TotalStudents</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-people fs-1"></i>
                            </div>
                        </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                                            <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Yêu cầu mới</h5>
                                <h3 class="mb-0">@Model.NewRequests</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-clipboard-check fs-1"></i>
                            </div>
                        </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                                            <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Doanh thu tháng</h5>
                                <h3 class="mb-0">@(Model.MonthlyRevenue / 1000000)M</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-currency-dollar fs-1"></i>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quản lý nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <a href="/Dormitory/Manage" class="btn btn-outline-primary w-100">
                                <i class="bi bi-building"></i> Quản lý KTX
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/Room/Manage" class="btn btn-outline-success w-100">
                                <i class="bi bi-house"></i> Quản lý Phòng
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/Facility/Manage" class="btn btn-outline-warning w-100">
                                <i class="bi bi-tools"></i> Quản lý Thiết bị
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/DormFacility/Manage" class="btn btn-outline-info w-100">
                                <i class="bi bi-gear"></i> Thiết bị KTX
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Yêu cầu gần đây</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Sửa chữa quạt - Phòng A101</h6>
                                <small class="text-muted">Đã gửi: 2 giờ trước</small>
                            </div>
                            <span class="badge bg-warning">Chờ xử lý</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Xin nghỉ tạm thời - Phòng B205</h6>
                                <small class="text-muted">Đã gửi: 1 ngày trước</small>
                            </div>
                            <span class="badge bg-success">Đã duyệt</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Báo cáo vi phạm - Phòng C301</h6>
                                <small class="text-muted">Đã gửi: 3 ngày trước</small>
                            </div>
                            <span class="badge bg-danger">Cần xử lý</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 