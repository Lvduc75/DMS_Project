@model IEnumerable<DMS_FE.Models.UtilityReadingModel>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Quản Lý Chỉ Số Tiện ích</h2>
        </div>
        <div class="col text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm Chỉ Số Mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Phòng</th>
                            <th>Sinh Viên</th>
                            <th>Ngày Đọc</th>
                            <th>Chỉ Số Điện (kWh)</th>
                            <th>Chỉ Số Nước (m³)</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Room?.Code</strong>
                                    <br><small class="text-muted">@item.Room?.Dormitory?.Name</small>
                                </td>
                                <td>
                                    @if (item.Room?.StudentRooms?.Any() == true)
                                    {
                                        foreach (var studentRoom in item.Room.StudentRooms)
                                        {
                                            <span class="badge bg-info me-1">@studentRoom.Student?.Name</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có sinh viên</span>
                                    }
                                </td>
                                <td>@item.ReadingMonth.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-warning">@item.Electric kWh</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Water m³</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Bill", new { roomId = item.RoomId, readingId = item.Id })" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-calculator"></i> Tính Tiền
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 