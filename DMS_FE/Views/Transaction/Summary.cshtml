@{
    ViewData["Title"] = "Tổng Kết Giao Dịch";
    var summary = ViewBag.Summary as List<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Tổng Kết Giao Dịch</h2>
        </div>
        <div class="col text-end">
            <a href="@Url.Action("Manage")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại Quản Lý Giao Dịch
            </a>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Từ Ngày</label>
                    <input type="date" name="fromDate" class="form-control" value="@Context.Request.Query["fromDate"]" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Đến Ngày</label>
                    <input type="date" name="toDate" class="form-control" value="@Context.Request.Query["toDate"]" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Lọc
                        </button>
                        <a href="@Url.Action("Summary")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Làm Mới
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Tổng Giao Dịch</h6>
                            <h3>@summary.Count</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-credit-card fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Tổng Tiền</h6>
                            <h3>@summary.Sum(s => s.TotalAmount).ToString("N0") VND</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-cash-coin fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Trung Bình/Giao Dịch</h6>
                            <h3>@(summary.Count > 0 ? (summary.Sum(s => s.TotalAmount) / summary.Count).ToString("N0") : "0") VND</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-graph-up fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Ngày Cao Nhất</h6>
                            <h3>@(summary.Count > 0 ? summary.Max(s => s.TotalAmount).ToString("N0") : "0") VND</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-trophy fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-table"></i> Chi Tiết Theo Ngày
            </h5>
        </div>
        <div class="card-body">
            @if (!summary.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <h4 class="mt-3">Không có dữ liệu</h4>
                    <p class="text-muted">Hãy chọn khoảng thời gian khác hoặc tạo giao dịch mới</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ngày</th>
                                <th>Số Giao Dịch</th>
                                <th>Tổng Tiền</th>
                                <th>Trung Bình</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in summary)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Date.ToString("dd/MM/yyyy")</strong>
                                        <br><small class="text-muted">@item.Date.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@item.TransactionCount giao dịch</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@item.TotalAmount.ToString("N0") VND</strong>
                                    </td>
                                    <td>
                                        <span class="text-info">@((item.TotalAmount / item.TransactionCount).ToString("N0")) VND</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Manage", new { fromDate = item.Date.ToString("yyyy-MM-dd"), toDate = item.Date.ToString("yyyy-MM-dd") })" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Xem Chi Tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div> 