@model List<DMS_FE.Models.DormitoryModel>
@{
    ViewData["Title"] = "Quản lý Ký túc xá";
}

<h2>Quản lý Ký túc xá</h2>
<a href="/Dormitory/Create" class="btn btn-success mb-3">+ Thêm ký túc xá</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên ký túc xá</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int stt = 1;
            foreach (var dorm in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>@dorm.Name</td>
                    <td>
                        <a href="/Dormitory/Edit/@dorm.Id" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="/Dormitory/Delete/@dorm.Id" class="btn btn-danger btn-sm ms-1">Xóa</a>
                    </td>
                </tr>
                stt++;
            }
        }
        else
        {
            <tr><td colspan="3" class="text-center">Chưa có ký túc xá nào.</td></tr>
        }
    </tbody>
</table> 