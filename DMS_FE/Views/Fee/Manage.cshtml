@model IEnumerable<DMS_FE.Models.FeeModel>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Quản Lý Phí</h2>
        </div>
        <div class="col text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm Phí Mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Sinh Viên</th>
                            <th>Loại Phí</th>
                            <th>Số Tiền</th>
                            <th>Trạng Thái</th>
                            <th>Ngày Hạn</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Student?.Name</strong>
                                    <br><small class="text-muted">@item.Student?.Email</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Type</span>
                                </td>
                                <td>
                                    <strong class="text-success">@item.Amount.ToString("N0") VND</strong>
                                </td>
                                <td>
                                    @if (item.Status == "paid")
                                    {
                                        <span class="badge bg-success">Đã Thanh Toán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Chưa Thanh Toán</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DueDate.HasValue)
                                    {
                                        <span class="@(item.DueDate.Value < DateOnly.FromDateTime(DateTime.Now) && item.Status == "unpaid" ? "text-danger" : "")">
                                            @item.DueDate.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (item.Status == "unpaid")
                                        {
                                            <a href="@Url.Action("Create", "Transaction", new { feeId = item.Id })" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-cash"></i> Thanh Toán
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 