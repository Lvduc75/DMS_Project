@model DMS_FE.Models.RoomFacilityModel

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Xóa Tiện Ích Phòng</h2>
        </div>
        <div class="col text-end">
            <a href="@Url.Action("Manage")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>

    <div class="alert alert-danger">
        <h4 class="alert-heading">Cảnh Báo!</h4>
        <p>Bạn có chắc chắn muốn xóa tiện ích này không? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title">Thông Tin Phòng</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Mã Phòng:</dt>
                        <dd class="col-sm-8">@Model.Room?.Code</dd>
                        
                        <dt class="col-sm-4">Ký Túc Xá:</dt>
                        <dd class="col-sm-8">@Model.Room?.Dormitory?.Name</dd>
                        
                        <dt class="col-sm-4">Sức Chứa:</dt>
                        <dd class="col-sm-8">@Model.Room?.Capacity người</dd>
                        
                        <dt class="col-sm-4">Trạng Thái:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Room?.Status == "Available" ? "success" : "warning")">
                                @Model.Room?.Status
                            </span>
                        </dd>
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <h5 class="card-title">Thông Tin Tiện Ích</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Tên Tiện Ích:</dt>
                        <dd class="col-sm-8">@Model.Facility?.Name</dd>
                        
                        <dt class="col-sm-4">Đơn Giá:</dt>
                        <dd class="col-sm-8">@Model.Facility?.UnitPrice.ToString("N0") VNĐ</dd>
                        
                        <dt class="col-sm-4">Số Lượng:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning">@Model.Quantity</span>
                        </dd>
                        
                        <dt class="col-sm-4">Tổng Giá Trị:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">
                                @((Model.Facility?.UnitPrice * Model.Quantity)?.ToString("N0")) VNĐ
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xác Nhận Xóa
                </button>
                <a href="@Url.Action("Manage")" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div> 