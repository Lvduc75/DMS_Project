@model IEnumerable<DMS_FE.Models.RoomFacilityModel>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Quản Lý Tiện Ích Phòng</h2>
        </div>
        <div class="col text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm Tiện Ích Mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Phòng</th>
                            <th>Ký Túc Xá</th>
                            <th>Tiện Ích</th>
                            <th>Số Lượng</th>
                            <th>Đơn Giá</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Room?.Code</strong>
                                    <br><small class="text-muted">Sức chứa: @item.Room?.Capacity | Trạng thái: @item.Room?.Status</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Room?.Dormitory?.Name</span>
                                </td>
                                <td>
                                    <strong>@item.Facility?.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-warning">@item.Quantity</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">@item.Facility?.UnitPrice.ToString("N0") VNĐ</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger" 
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa tiện ích này?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 