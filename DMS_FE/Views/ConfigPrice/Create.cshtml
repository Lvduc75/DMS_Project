@model DMS.Models.Entities.ConfigPrice

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Thêm Cấu hình Giá Mới</h2>
        </div>
        <div class="col text-end">
            <a href="@Url.Action("Manage")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Loại dịch vụ</label>
                            <select asp-for="Type" class="form-select" required>
                                <option value="">-- Chọn loại dịch vụ --</option>
                                <option value="room">Phòng</option>
                                <option value="electricity">Điện</option>
                                <option value="water">Nước</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="UnitPrice" class="form-label">Đơn giá (VND)</label>
                            <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" required />
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Nhập đơn giá theo đơn vị tương ứng (VND/tháng, VND/kWh, VND/m³, etc.)
                            </small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="EffectiveFrom" class="form-label">Ngày có hiệu lực</label>
                            <input asp-for="EffectiveFrom" class="form-control" type="date" required />
                            <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Tạo cấu hình
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Set default effective date to today
            if (!$('#EffectiveFrom').val()) {
                $('#EffectiveFrom').val(new Date().toISOString().split('T')[0]);
            }
            
            // Format price input
            $('#UnitPrice').on('input', function() {
                var value = $(this).val();
                if (value && !isNaN(value)) {
                    $(this).val(parseFloat(value).toFixed(2));
                }
            });
        });
    </script>
} 