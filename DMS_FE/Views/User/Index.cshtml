@using System.Net
@model List<DMS_FE.Models.UserModel>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <span><i class="bi bi-people me-2"></i>User List</span>
        <a asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus-circle me-1"></i>Add User</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.Id</td>
                                <td>@u.Name</td>
                                <td>@u.Email</td>
                                <td>@u.Phone</td>
                                <td>
                                    <span class="badge @(u.Role == "student" ? "bg-info" : u.Role == "manager" ? "bg-primary" : "bg-secondary") text-capitalize">@u.Role</span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
