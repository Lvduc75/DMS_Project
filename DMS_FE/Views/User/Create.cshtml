@model DMS_FE.Models.UserModel
@{
    ViewData["Title"] = "Tạo Người Dùng Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <i class="bi bi-person-plus"></i> Tạo Người Dùng Mới
            </div>
            <div class="card-body">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> Vui lòng sửa các lỗi bên dưới.
                    </div>
                }
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Họ và Tên</label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập họ và tên" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="example@studorm.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Số Điện Thoại</label>
                        <input asp-for="Phone" class="form-control" placeholder="0123456789" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mật Khẩu</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label">Vai Trò</label>
                        <select asp-for="Role" class="form-select">
                            <option value="">-- Chọn Vai Trò --</option>
                            <option value="Student">Sinh Viên</option>
                            <option value="Manager">Quản Lý</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Tạo Người Dùng
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Quay Lại Danh Sách
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 