@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Student Dashboard</h2>
                <div>
                    <span class="text-muted">Xin chào, @ViewBag.UserName</span>
                    <form method="post" action="/Account/Logout" style="display: inline;">
                        <button type="submit" class="btn btn-outline-danger btn-sm ms-2">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Phòng hiện tại</h5>
                            <h3 class="mb-0">A101</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-house-door fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Phí tháng này</h5>
                            <h3 class="mb-0">500K</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-currency-dollar fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Yêu cầu</h5>
                            <h3 class="mb-0">2</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-clipboard-check fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Thông báo</h5>
                            <h3 class="mb-0">5</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-bell fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <p><strong>Họ tên:</strong> @ViewBag.UserName</p>
                    <p><strong>Email:</strong> student@example.com</p>
                    <p><strong>Phòng:</strong> A101 - Ký túc xá A</p>
                    <p><strong>Ngày vào:</strong> 01/09/2024</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Yêu cầu gần đây</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Sửa chữa quạt</h6>
                                <small class="text-muted">Đã gửi: 2 ngày trước</small>
                            </div>
                            <span class="badge bg-warning">Đang xử lý</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Xin nghỉ tạm thời</h6>
                                <small class="text-muted">Đã gửi: 1 tuần trước</small>
                            </div>
                            <span class="badge bg-success">Đã duyệt</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 