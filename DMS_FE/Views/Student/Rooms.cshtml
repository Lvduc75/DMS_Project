@model List<RoomViewModel>
@{
    ViewData["Title"] = "Phòng Ở";
    Layout = "_StudentLayout";
    var dormitoryId = Context.Request.Query["dormitoryId"].ToString();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="bi bi-door-open me-2"></i>Phòng Ở
        </h2>
        <p class="text-muted mb-0">Xem thông tin chi tiết về các phòng trong ký túc xá</p>
    </div>
    <div class="d-flex gap-2">
        @if (!string.IsNullOrEmpty(dormitoryId))
        {
            <a href="/Student/Dormitories" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay Lại KTX
            </a>
        }
        <span class="badge bg-success fs-6">@Model?.Count phòng</span>
    </div>
</div>

<!-- Bộ Lọc -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 mb-3">
                <label class="form-label">Trạng thái phòng</label>
                <select class="form-select" id="statusFilter">
                    <option value="">Tất cả</option>
                    <option value="Available">Còn trống</option>
                    <option value="Occupied">Đã thuê</option>
                    <option value="Maintenance">Bảo trì</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label">Loại phòng</label>
                <select class="form-select" id="typeFilter">
                    <option value="">Tất cả</option>
                    <option value="Single">Phòng đơn</option>
                    <option value="Double">Phòng đôi</option>
                    <option value="Triple">Phòng ba</option>
                    <option value="Quad">Phòng bốn</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label">Tầng</label>
                <select class="form-select" id="floorFilter">
                    <option value="">Tất cả</option>
                    <option value="1">Tầng 1</option>
                    <option value="2">Tầng 2</option>
                    <option value="3">Tầng 3</option>
                    <option value="4">Tầng 4</option>
                    <option value="5">Tầng 5</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label">Giá phòng</label>
                <select class="form-select" id="priceFilter">
                    <option value="">Tất cả</option>
                    <option value="low">Dưới 1 triệu</option>
                    <option value="medium">1-2 triệu</option>
                    <option value="high">Trên 2 triệu</option>
                </select>
            </div>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row" id="roomsContainer">
        @foreach (var room in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4 room-item" 
                 data-status="@room.Status" 
                 data-type="@room.RoomType" 
                 data-floor="@room.Floor" 
                 data-price="@room.Price">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                    <div class="card-header @(room.Status == "Available" ? "bg-success" : room.Status == "Occupied" ? "bg-warning" : "bg-secondary") text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-door-open me-2"></i>Phòng @room.RoomNumber
                            </h5>
                            <span class="badge bg-light @(room.Status == "Available" ? "text-success" : room.Status == "Occupied" ? "text-warning" : "text-secondary")">
                                @(room.Status == "Available" ? "Còn trống" : room.Status == "Occupied" ? "Đã thuê" : "Bảo trì")
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded">
                                        <h6 class="mb-1 text-primary">@room.Floor</h6>
                                        <small class="text-muted">Tầng</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="bg-info bg-opacity-10 p-2 rounded">
                                        <h6 class="mb-1 text-info">@room.Capacity</h6>
                                        <small class="text-muted">Sức chứa</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="bg-warning bg-opacity-10 p-2 rounded">
                                        <h6 class="mb-1 text-warning">@room.CurrentOccupants</h6>
                                        <small class="text-muted">Đã ở</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <p class="text-muted mb-2">
                                <i class="bi bi-building me-2"></i>@room.DormitoryName
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-tag me-2"></i>@room.RoomType
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-currency-dollar me-2"></i>@room.Price.ToString("N0") VNĐ/tháng
                            </p>
                        </div>
                        
                        <div class="mb-3">
                            <h6 class="mb-2">
                                <i class="bi bi-tools me-2"></i>Tiện Ích Phòng
                            </h6>
                            <div class="d-flex flex-wrap gap-1">
                                @if (room.Facilities != null && room.Facilities.Any())
                                {
                                    foreach (var facility in room.Facilities.Take(3))
                                    {
                                        <span class="badge bg-secondary">@facility</span>
                                    }
                                    @if (room.Facilities.Count > 3)
                                    {
                                        <span class="badge bg-secondary">+@(room.Facilities.Count - 3) khác</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có thông tin</span>
                                }
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#roomModal@(room.Id)">
                                <i class="bi bi-eye me-2"></i>Xem Chi Tiết
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Modal Chi Tiết Phòng -->
            <div class="modal fade" id="roomModal@(room.Id)" tabindex="-1" aria-labelledby="roomModalLabel@(room.Id)" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header @(room.Status == "Available" ? "bg-success" : room.Status == "Occupied" ? "bg-warning" : "bg-secondary") text-white">
                            <h5 class="modal-title" id="roomModalLabel@(room.Id)">
                                <i class="bi bi-door-open me-2"></i>Phòng @room.RoomNumber
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="mb-3">
                                        <i class="bi bi-info-circle me-2"></i>Thông Tin Cơ Bản
                                    </h6>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <strong>Số phòng:</strong><br>
                                            <i class="bi bi-door-open me-2"></i>@room.RoomNumber
                                        </li>
                                        <li class="mb-2">
                                            <strong>Ký túc xá:</strong><br>
                                            <i class="bi bi-building me-2"></i>@room.DormitoryName
                                        </li>
                                        <li class="mb-2">
                                            <strong>Tầng:</strong><br>
                                            <i class="bi bi-layers me-2"></i>Tầng @room.Floor
                                        </li>
                                        <li class="mb-2">
                                            <strong>Loại phòng:</strong><br>
                                            <i class="bi bi-tag me-2"></i>@room.RoomType
                                        </li>
                                        <li class="mb-2">
                                            <strong>Trạng thái:</strong><br>
                                            <span class="badge bg-@(room.Status == "Available" ? "success" : room.Status == "Occupied" ? "warning" : "secondary")">
                                                @(room.Status == "Available" ? "Còn trống" : room.Status == "Occupied" ? "Đã thuê" : "Bảo trì")
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="mb-3">
                                        <i class="bi bi-graph-up me-2"></i>Thống Kê
                                    </h6>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                                <h4 class="mb-1 text-primary">@room.Capacity</h4>
                                                <small class="text-muted">Sức chứa</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                                <h4 class="mb-1 text-success">@room.Occupied</h4>
                                                <small class="text-muted">Đã ở</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="bg-info bg-opacity-10 p-3 rounded">
                                                <h4 class="mb-1 text-info">@(room.Capacity - room.Occupied)</h4>
                                                <small class="text-muted">Còn trống</small>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <h6 class="mb-2">Giá phòng</h6>
                                        <div class="bg-warning bg-opacity-10 p-3 rounded text-center">
                                            <h4 class="mb-1 text-warning">@room.Price.ToString("N0") VNĐ</h4>
                                            <small class="text-muted">/tháng</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <hr>
                            
                            <div class="mt-4">
                                <h6 class="mb-3">
                                    <i class="bi bi-tools me-2"></i>Tiện Ích Phòng
                                </h6>
                                @if (room.Facilities != null && room.Facilities.Any())
                                {
                                    <div class="row">
                                        @foreach (var facility in room.Facilities)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-check-circle text-success me-2"></i>
                                                    <span>@facility</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">Chưa có thông tin tiện ích</p>
                                }
                            </div>
                            
                            @if (room.Status == "Occupied" && room.Students != null && room.Students.Any())
                            {
                                <hr>
                                <div class="mt-4">
                                    <h6 class="mb-3">
                                        <i class="bi bi-people me-2"></i>Sinh Viên Đang Ở
                                    </h6>
                                    <div class="row">
                                        @foreach (var student in room.Students)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="d-flex align-items-center p-2 bg-light rounded">
                                                    <i class="bi bi-person-circle text-primary me-2"></i>
                                                    <div>
                                                        <strong>@student.Name</strong><br>
                                                        <small class="text-muted">@student.StudentId</small>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="bg-light rounded-circle d-inline-block p-4 mb-3">
            <i class="bi bi-door-open text-muted" style="font-size: 3rem;"></i>
        </div>
        <h4 class="text-muted mb-2">Chưa có phòng nào</h4>
        <p class="text-muted">Hiện tại chưa có thông tin về phòng trong hệ thống.</p>
    </div>
}

<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
        transition: all 0.3s ease;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const statusFilter = document.getElementById('statusFilter');
    const typeFilter = document.getElementById('typeFilter');
    const floorFilter = document.getElementById('floorFilter');
    const priceFilter = document.getElementById('priceFilter');
    const roomsContainer = document.getElementById('roomsContainer');
    const roomItems = document.querySelectorAll('.room-item');

    function filterRooms() {
        const status = statusFilter.value;
        const type = typeFilter.value;
        const floor = floorFilter.value;
        const price = priceFilter.value;

        roomItems.forEach(item => {
            let show = true;

            // Lọc theo trạng thái
            if (status && item.dataset.status !== status) {
                show = false;
            }

            // Lọc theo loại phòng
            if (type && item.dataset.type !== type) {
                show = false;
            }

            // Lọc theo tầng
            if (floor && item.dataset.floor !== floor) {
                show = false;
            }

            // Lọc theo giá
            if (price) {
                const roomPrice = parseInt(item.dataset.price);
                if (price === 'low' && roomPrice >= 1000000) show = false;
                if (price === 'medium' && (roomPrice < 1000000 || roomPrice > 2000000)) show = false;
                if (price === 'high' && roomPrice <= 2000000) show = false;
            }

            item.style.display = show ? 'block' : 'none';
        });
    }

    statusFilter.addEventListener('change', filterRooms);
    typeFilter.addEventListener('change', filterRooms);
    floorFilter.addEventListener('change', filterRooms);
    priceFilter.addEventListener('change', filterRooms);
});
</script> 