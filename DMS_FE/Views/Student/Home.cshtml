@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Welcome, Student!</h4>
                </div>
                <div class="card-body">
                    <p class="lead">This is your student dashboard.</p>
                    <ul>
                        <li>You can <b>create a new request</b> for support, repair, or leave by clicking <b>Create Request</b> in the sidebar.</li>
                        <li>View your <b>request history</b> in <b>My Requests</b>.</li>
                        <li>Check and update your <b>personal information</b> in <b>My Info</b>.</li>
                    </ul>
                    <div class="alert alert-info mt-3">
                        If you need help, please contact the dormitory manager.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 