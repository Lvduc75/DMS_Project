@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Dormitory Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        body {
            background: #f8f9fa;
        }
        .sidebar {
            min-height: 100vh;
            background: #212529;
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            z-index: 100;
        }
        .sidebar .nav-link {
            color: #adb5bd;
            font-weight: 500;
        }
        .sidebar .nav-link.active, .sidebar .nav-link:hover {
            color: #fff;
            background: #495057;
        }
        .sidebar .nav-link i {
            margin-right: 8px;
        }
        .main-content {
            margin-left: 240px;
            padding: 32px 24px 24px 24px;
        }
        .header {
            background: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 101;
        }
        .footer {
            background: #fff;
            border-top: 1px solid #dee2e6;
            padding: 12px 24px;
            text-align: right;
            color: #6c757d;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar d-flex flex-column p-3">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <i class="bi bi-building fs-3 me-2"></i>
            <span class="fs-5 fw-bold">Dormitory Admin</span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item"><a href="/" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"><i class="bi bi-house"></i> Dashboard</a></li>
            <li><a href="/Dormitory/Manage" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dormitory" ? "active" : "")"><i class="bi bi-building"></i> Dormitory & Rooms</a></li>
            <li><a href="/Room/Manage" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Room" ? "active" : "")"><i class="bi bi-door-closed"></i> Room Management</a></li>
            <li><a href="/Facility/Manage" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Facility" ? "active" : "")"><i class="bi bi-tools"></i> Facility Management</a></li>
            <li><a href="/User/Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")"><i class="bi bi-people"></i> Users</a></li>
            <li><a href="#" class="nav-link"><i class="bi bi-cash-coin"></i> Fees & Transactions</a></li>
            <li><a href="#" class="nav-link"><i class="bi bi-envelope"></i> Requests</a></li>
            <li><a href="#" class="nav-link"><i class="bi bi-megaphone"></i> News</a></li>
        </ul>
        <hr />
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle fs-4 me-2"></i>
                <strong>Admin</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="#">Profile</a></li>
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/Account/Logout">Sign out</a></li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <div class="header mb-4">
            <div class="fs-4 fw-bold">@ViewData["Title"]</div>
            <div>
                <span class="badge bg-primary">Dormitory Management System</span>
            </div>
        </div>
        @RenderBody()
        <div class="footer mt-4">
            &copy; @DateTime.Now.Year Dormitory Management System
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
